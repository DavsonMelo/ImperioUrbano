generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // depois trocamos pra "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id        String   @id @default(cuid())
  code      String   @unique
  createdAt DateTime @default(now())
  players   Player[]
  gameState GameState?
}

model Player {
  id        String   @id @default(cuid())
  name      String
  balance   Int      @default(1500) // saldo inicial padrão
  position  Int      @default(0)    // posição no tabuleiro
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id])
  createdAt DateTime @default(now())
}

model GameState {
  id        String   @id @default(cuid())
  roomId    String   @unique
  room      Room     @relation(fields: [roomId], references: [id])
  turn      Int      @default(0) // indica o turno/jogador atual
  status    String   @default("waiting") // waiting | active | finished
  createdAt DateTime @default(now())
}
